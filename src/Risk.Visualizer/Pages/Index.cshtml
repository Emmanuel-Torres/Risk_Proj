@page
@using Risk.Shared
@namespace Risk.Visualizer.Pages
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home page";
}
@if (Model.Status.GameState != GameState.GameOver)
{
    <meta http-equiv="refresh" content="1">
}

<h2>Game State: @Model.Status.GameState</h2>

@if (@Model.Status.GameState == Risk.Shared.GameState.Joining)
{
    <form method="post" asp-page-handler="StartGame">
        <button type="submit">Start Game</button>
    </form>
}

@if (Model.Status.GameState == Risk.Shared.GameState.GameOver)
{
    <form method="post" asp-page-handler="RestartGame">
        <button type="submit">Restart Game</button>
    </form>
    {
        string winner = null;
        int winningScore = 0;

        foreach (var player in Model.Status.PlayerStats.OrderByDescending(p => p.Score))
        {
            if (winner == null)
            {
                winner = player.Name;
                winningScore = player.Score;
            }
            if (player.Score > winningScore)
            {
                winner = player.Name;
                winningScore = player.Score;
            }
        }
        <h1>The winner is @winner</h1>
        <h2>Winner Score: @winningScore</h2>

        <br />
        <h2>finishing stats:</h2>
    }
}

<h3>Players:</h3>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Armies</th>
            <th>Territories</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Status.PlayerStats.OrderByDescending(p => p.Score))
        {
            <tr>
                <td>@player.Name</td>
                <td>@player.Armies</td>
                <td>@player.Territories</td>
                <td>@player.Score</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Status.GameState == Risk.Shared.GameState.GameOver)
{
    <h2>Finishing Board:</h2>
}
<table border="1px" cellpadding="10px">
    @for (int rows = 0; rows <= Model.NumRows; rows++)
    {
        <tr>
            @for (int cols = 0; cols <= Model.NumCols; cols++)
            {
                var tempLoc = new Location { Column = cols, Row = rows };
                var ter = Model.Status.Board.First(t => t.Location == tempLoc);
                <td>
                    <div>@ter.Location</div>
                    <div>@ter.OwnerName</div>
                    <div>@ter.Armies</div>
                </td>
            }
        </tr>
    }
</table>